@model IEnumerable<Movie>;

<section class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-8 gap-4">
    @foreach (var Movie in Model)
    {
        if (Movie.IsActive)
        {
            <section class="text-white space-y-6">
                <a asp-controller="Movies" asp-action="Movie" asp-route-id="@Movie.MovieId">
                    <figure>
                        <img src="@Movie.ImageUrl" width="100%" height="100%" class="rounded shadow-md shadow-black" alt="">
                    </figure>
                </a>
            </section>
        }
    }
</section>
